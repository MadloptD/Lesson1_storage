{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/index.android.js",
    "**/index.ios.js",
    "support",
    "__tests__",
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}